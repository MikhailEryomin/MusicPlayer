<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="170dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/track_view_parent"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:backgroundTint="@color/lighter_gray"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#141414"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/track_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:progressBackgroundTint="#5e5e5e"
                android:progressTint="#ffdb67"
                android:thumbTint="#ffdb67" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/track_cursor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="0:00"
                    android:textAlignment="textStart"
                    android:textColor="#e9e9e9"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/track_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="2:28"
                    android:textAlignment="textEnd"
                    android:textColor="#e9e9e9"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/track_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/track_thumbnail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/baseline_music_note_24" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/track_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Title"

                        android:textAlignment="textStart"
                        android:textColor="@color/white_2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/track_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Artist"
                        android:textAlignment="textStart"
                        android:textColor="#e9e9e9"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/track_play_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/baseline_play_arrow_24" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottom_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/track_list_button"
            android:layout_width="0dp"
            tools:enabled="false"
            android:backgroundTint="@color/black"
            android:textColor="@color/button_color"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Main"
            android:layout_marginLeft="12dp" />

        <Button
            android:id="@+id/collection_button"
            android:layout_width="0dp"
            tools:enabled="true"
            android:backgroundTint="@color/black"
            android:textColor="@color/button_color"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            android:text="Collection" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>